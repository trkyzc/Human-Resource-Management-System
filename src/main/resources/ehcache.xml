<config xmlns='http://www.ehcache.org/v3'>

	<cache alias="candidateByUsername">
		<key-type>java.lang.String</key-type>
		<value-type>com.example.hrms.core.utilities.results.DataResult</value-type>
		<expiry>
		<ttl unit="seconds">3600</ttl>
		</expiry>
		<resources>
			<heap unit="entries">1000</heap>
			<offheap unit="MB">100</offheap>
		</resources>
	</cache>
	
	<cache alias="activeJobAdverts">
		<key-type>java.lang.String</key-type>
		<value-type>com.example.hrms.core.utilities.results.DataResult</value-type>
		<expiry>
		<ttl unit="seconds">3600</ttl>
		</expiry>
		<resources>
			<heap unit="entries">1000</heap>
			<offheap unit="MB">100</offheap>
		</resources>
	</cache>
	
	<cache alias="jobAdvertsByEmployerId">
		<key-type>java.lang.Integer</key-type>
		<value-type>com.example.hrms.core.utilities.results.DataResult</value-type>
		<expiry>
		<ttl unit="seconds">3600</ttl>
		</expiry>
		<resources>
			<heap unit="entries">1000</heap>
			<offheap unit="MB">100</offheap>
		</resources>
	</cache>
	
	<cache alias="candidates">
        <key-type>java.lang.String</key-type>
        <value-type>com.example.hrms.core.utilities.results.DataResult</value-type>
        <expiry>
            <ttl unit="seconds">3600</ttl> <!-- 1 hour TTL -->
        </expiry>
        <resources>
            <heap unit="entries">1000</heap> <!-- 1000 entries in heap -->
            <offheap unit="MB">100</offheap> <!-- 100MB offheap -->
        </resources>
    </cache>
    
    <cache alias="jobAdverts">
		<key-type>java.lang.String</key-type>
		<value-type>com.example.hrms.core.utilities.results.DataResult</value-type>
		<expiry>
		<ttl unit="seconds">3600</ttl>
		</expiry>
		<resources>
			<heap unit="entries">1000</heap>
			<offheap unit="MB">100</offheap>
		</resources>
	</cache>
	
	
    
	

</config>
